{
  "name": "Cookies Never Expire",
  "description": "Make all cookies permanant",
  "version": "0.0.1",
  "author": "Jacques De SAGAN",
  "manifest_version": 2,
  "permissions": ["cookies", "webRequest", "webRequestBlocking", "*://*/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  }
}
